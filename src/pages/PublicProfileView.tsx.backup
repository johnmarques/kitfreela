import { useState, useEffect } from 'react'
import { useParams, Link } from 'react-router-dom'
import { supabase, isSupabaseConfigured } from '@/lib/supabase'

// Interface do perfil público vindo do banco (campos em português)
interface PublicProfile {
  nome_profissional: string
  especialidade: string
  mini_bio: string
  url_foto: string
  whatsapp: string
  url_perfil: string
  link_video: string
  imagens: string[]
  publicado: boolean
}

export default function PublicProfileView() {
  const { slug } = useParams<{ slug: string }>()
  const [profile, setProfile] = useState<PublicProfile | null>(null)
  const [loading, setLoading] = useState(true)
  const [error, setError] = useState<string | null>(null)
  const [selectedImage, setSelectedImage] = useState<string | null>(null)

  useEffect(() => {
    if (slug) {
      loadProfile()
    }
  }, [slug])

  const loadProfile = async () => {
    if (!isSupabaseConfigured()) {
      setError('Sistema indisponível no momento.')
      setLoading(false)
      return
    }

    try {
      const { data, error: fetchError } = await supabase
        .from('perfis_publicos')
        .select('*')
        .eq('url_perfil', slug)
        .eq('publicado', true)
        .single()

      if (fetchError) {
        if (fetchError.code === 'PGRST116') {
          setError('Perfil não encontrado.')
        } else {
          console.error('Erro ao carregar perfil:', fetchError)
          setError('Erro ao carregar perfil.')
        }
        setLoading(false)
        return
      }

      setProfile(data as PublicProfile)
    } catch (err) {
      console.error('Erro:', err)
      setError('Erro ao carregar perfil.')
    } finally {
      setLoading(false)
    }
  }

  // Fecha o modal ao pressionar ESC
  useEffect(() => {
    const handleEsc = (e: KeyboardEvent) => {
      if (e.key === 'Escape') {
        setSelectedImage(null)
      }
    }
    window.addEventListener('keydown', handleEsc)
    return () => window.removeEventListener('keydown', handleEsc)
  }, [])

  // Estado de carregamento
  if (loading) {
    return (
      <div className="min-h-screen bg-gray-50 flex items-center justify-center">
        <div className="animate-pulse text-gray-500">Carregando...</div>
      </div>
    )
  }

  // Estado de erro / não encontrado
  if (error || !profile) {
    return (
      <div className="min-h-screen bg-gray-50 flex flex-col items-center justify-center p-4">
        <div className="text-center">
          <h1 className="text-6xl font-bold text-gray-300 mb-4">404</h1>
          <h2 className="text-xl font-semibold text-gray-700 mb-2">
            {error || 'Perfil não encontrado'}
          </h2>
          <p className="text-gray-500 mb-6">
            O perfil que você procura não existe ou não está publicado.
          </p>
          <Link
            to="/"
            className="inline-flex items-center px-4 py-2 bg-gray-900 text-white rounded-lg hover:bg-gray-800 transition-colors"
          >
            Voltar ao início
          </Link>
        </div>
      </div>
    )
  }

  // Filtra imagens válidas
  const validImages = (profile.imagens || []).filter((img) => img && img.trim() !== '')

  return (
    <div className="min-h-screen bg-gray-50">
      {/* Modal de Imagem Expandida */}
      {selectedImage && (
        <div
          className="fixed inset-0 z-50 flex items-center justify-center bg-black/80 p-4"
          onClick={() => setSelectedImage(null)}
        >
          {/* Botão Fechar */}
          <button
            onClick={() => setSelectedImage(null)}
            className="absolute top-4 right-4 text-white hover:text-gray-300 transition-colors"
            aria-label="Fechar"
          >
            <svg className="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
          {/* Imagem */}
          <img
            src={selectedImage}
            alt="Imagem expandida"
            className="max-w-full max-h-[90vh] object-contain rounded-lg"
            onClick={(e) => e.stopPropagation()}
          />
        </div>
      )}

      {/* Header */}
      <header className="bg-white border-b border-gray-200">
        <div className="max-w-4xl mx-auto px-4 py-4">
          <Link to="/" className="text-sm text-gray-500 hover:text-gray-700">
            ← Voltar
          </Link>
        </div>
      </header>

      {/* Conteúdo Principal */}
      <main className="max-w-4xl mx-auto px-4 py-8">
        {/* Card do Perfil */}
        <div className="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
          {/* Header do Perfil */}
          <div className="p-6 sm:p-8 text-center border-b border-gray-100">
            {/* Foto - Redonda */}
            {profile.url_foto && (
              <div className="mb-4">
                <img
                  src={profile.url_foto}
                  alt={profile.nome_profissional}
                  className="w-32 h-32 rounded-full object-cover mx-auto border-4 border-gray-100 shadow-sm"
                />
              </div>
            )}

            {/* Nome e Especialidade */}
            <h1 className="text-2xl sm:text-3xl font-bold text-gray-900 mb-1">
              {profile.nome_profissional}
            </h1>
            {profile.especialidade && (
              <p className="text-lg text-gray-600">{profile.especialidade}</p>
            )}

            {/* Mini Bio */}
            {profile.mini_bio && (
              <p className="mt-4 text-gray-600 max-w-lg mx-auto">{profile.mini_bio}</p>
            )}

            {/* Botão WhatsApp */}
            {profile.whatsapp && (
              <div className="mt-6">
                <a
                  href={profile.whatsapp}
                  target="_blank"
                  rel="noopener noreferrer"
                  className="inline-flex items-center gap-2 px-6 py-3 bg-green-500 text-white rounded-lg hover:bg-green-600 transition-colors font-medium"
                >
                  <svg className="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z" />
                  </svg>
                  Entrar em contato
                </a>
              </div>
            )}
          </div>

          {/* Portfólio - PRIMEIRO */}
          {validImages.length > 0 && (
            <div className="p-6 sm:p-8 border-b border-gray-100">
              <h2 className="text-lg font-semibold text-gray-900 mb-4">Portfólio</h2>
              {/* Grid: 2 colunas no mobile, 3 colunas no tablet/desktop */}
              <div className="grid grid-cols-2 md:grid-cols-3 gap-4">
                {validImages.map((img, index) => (
                  <div
                    key={index}
                    className="aspect-square rounded-lg overflow-hidden bg-gray-100 cursor-pointer"
                    onClick={() => setSelectedImage(img)}
                  >
                    <img
                      src={img}
                      alt={`Trabalho ${index + 1}`}
                      className="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                    />
                  </div>
                ))}
              </div>
            </div>
          )}

          {/* Vídeo de Apresentação - SEGUNDO */}
          {profile.link_video && (
            <div className="p-6 sm:p-8">
              <h2 className="text-lg font-semibold text-gray-900 mb-4">
                Vídeo de Apresentação
              </h2>
              <div className="aspect-video rounded-lg overflow-hidden bg-gray-100">
                <iframe
                  src={profile.link_video}
                  title="Vídeo de apresentação"
                  className="w-full h-full"
                  allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                  allowFullScreen
                />
              </div>
            </div>
          )}
        </div>

        {/* Footer */}
        <div className="mt-8 text-center text-sm text-gray-400">
          Perfil criado com{' '}
          <a
            href="/"
            className="text-gray-600 hover:text-gray-900"
          >
            KitFreela
          </a>
        </div>
      </main>
    </div>
  )
}
